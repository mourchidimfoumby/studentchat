<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.StudenChat" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/secondary_color</item>
        <item name="colorSecondary">@color/third_color</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Theme.StudenChat" parent="Base.Theme.StudenChat" />

    <style name="h1">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h3">
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>