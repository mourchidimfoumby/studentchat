<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.StudenChat" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.StudenChat" parent="Base.Theme.StudenChat" />

    <style name="h1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h3">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/h3</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="txt_view_name_user">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="information">
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="buttonColor" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary_color</item>
    </style>
</resources>