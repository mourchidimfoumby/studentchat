<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudenChat"
        tools:targetApi="31">
        <activity
            android:name=".ui.elements.activity.AccountActivity"
            android:exported="false" />
        <activity
            android:name=".ui.elements.activity.ChatActivity"
            android:exported="false"
            android:parentActivityName=".ui.elements.activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".authentication.ui.RegistrationActivity"
            android:exported="false"
            android:label="Inscription"
            android:parentActivityName=".authentication.ui.AuthenticationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".authentication.ui.AuthenticationActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.elements.activity.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.elements.activity.AddConversationActivity"
            android:exported="false"
            android:label="Nouvelle conversation"
            android:parentActivityName=".ui.elements.activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.elements.activity.AddFriendsActivity"
            android:exported="false"
            android:label="Ajouter un amis"
            android:parentActivityName=".ui.elements.activity.MainActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>